import http from 'k6/http';
import { check } from 'k6';

const BASE_URL = __ENV.BASE_URL;
const headers = {
  'Authorization': `Bearer ${__ENV.TOKEN}`,
  'Content-Type': 'application/json',
};

export function testGetCustChannelRef() {
  const payload = JSON.stringify({
    physDestType: 'BRANCH',          // Example value, replace as needed
    physDestination: 'NYC-MIDTOWN'   // Example value, replace as needed
  });

  const res = http.post(`${BASE_URL}/getCustChannelRefForPhysDest`, payload, { headers });

  check(res, {
    'status is 200': (r) => r.status === 200,
    'response has channelRef': (r) => r.body.includes('channelRef'),
    'response has status': (r) => r.body.includes('status'),
  });

  // Optional: log some values for debug
  // console.log(res.body);
}

import { testGetCustChannelRef } from './modules/getCustChannelRef.js';
import { sleep } from 'k6';

export let options = {
  vus: 10,
  iterations: 50,
};

export default function () {
  testGetCustChannelRef();
  sleep(1);
}

k6 run test.js --env BASE_URL=https://your-api.com --env TOKEN=your_jwt_here

export const BASE_URL = 'https://your-api.com';
export const TOKEN = 'your_jwt_token_here';

