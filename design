stages:
  - performance-test

k6_performance_test:
  stage: performance-test
  script:
    - echo "Running k6 performance test..."
    - k6 run --summary-export=result.json main.js
  artifacts:
    when: always
    paths:
      - result.json
    expire_in: 1 day
  only:
    - main  # or replace with your working branch

